# HTTPS mirror:
deb https://debian.ethz.ch/debian {{ ansible_distribution_release }} main
  {%- if base__pkg_contrib | bool -%}
    {{- ' contrib' -}}
  {%- endif -%}
  {%- if base__pkg_non_free_firmware | bool -%}
    {{- ' non-free' -}}
  {%- endif -%}
  {{- '\n' -}}
