  {%- if base__pkg_contrib | bool -%}
    {{- ' contrib' -}}
  {%- endif -%}
  {%- if base__pkg_non_free_firmware | bool -%}
    {{- ' non-free' -}}
  {%- endif -%}
  {{- '\n\n' -}}

